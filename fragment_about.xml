            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="OBJECTIVES"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/objectives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/objective_heading"
            android:layout_marginTop="20dp"
            android:text="@string/aboutobjective" />
        <TextView
            android:id="@+id/achievements_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/objectives"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="ACHIEVEMENTS"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/achievements_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/achievements_heading"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/aboutlast" />

