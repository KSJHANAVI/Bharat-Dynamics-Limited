        <TextView
            android:id="@+id/awards_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abouttableimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="LIST OF NATIONAL AWARDS"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/awards_info_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/awards_heading"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/about_companyprofile_awards"
            android:textColor="@android:color/holo_blue_dark" />
        <ImageView
            android:id="@+id/aboutawards_list"
            android:layout_width="match_parent"
